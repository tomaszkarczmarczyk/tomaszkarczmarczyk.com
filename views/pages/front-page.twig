{% extends 'layouts/base.twig' %}

{% block content %}
  <main class="main">
    <div class="me">
      {% if post.thumbnail %}
        <figure class="me__cover">
          <img class="me__image" width="{{ post.thumbnail.sizes.thumbnail.width }}" height="{{ post.thumbnail.sizes.thumbnail.height }}" src="{{ post.thumbnail.src('thumbnail') }}" srcset="{{ post.thumbnail.srcset }}" sizes="(max-width: {{ post.thumbnail.sizes.thumbnail.width ~ 'px' }}) 100vw, {{ post.thumbnail.sizes.thumbnail.width ~ 'px' }}" alt="{{ post.thumbnail.alt }}" />
        </figure>
      {% endif %}

      <article class="content">
        {% filter apply_filters('tokk_content_sanitize') %}
          {{ post.content }}
        {% endfilter %}
      </article>
    </div>

    {% if posts %}
      <h2 class="heading heading--is-secondary">
        {{ __('Najnowsze artyku≈Çy na blogu:', 'tokk') }}
      </h2>

      {% for post in posts %}
        <div class="card">
          {% include 'components/card.twig' with {
            post: post
          } %}
        </div>
      {% endfor %}
    {% endif %}
  </main>

  {% if sidebar %}
    <aside class="sidebar sidebar--is-front-page">
      {{ sidebar }}
    </aside>
  {% endif %}
{% endblock %}
