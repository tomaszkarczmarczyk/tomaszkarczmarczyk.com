{% if post.thumbnail %}
  <figure class="cover">
    {% include 'components/cover.twig' with {
      class: 'cover'
    } %}
  </figure>
{% endif %}

<section class="card__body">
  {% if post.categories %}
    <div class="category-list category-list--is-primary">
      {% include 'components/category-list.twig' with {
        categories: post.categories
      } %}
    </div>
  {% endif %}

  <h2 class="card__heading">
    {{ post.title }}
  </h2>

  {% if post.post_excerpt %}
    <p class="card__lead">
      {% filter apply_filters('the_excerpt') %}
        {{ post.post_excerpt }}
      {% endfilter %}
    </p>
  {% endif %}

  <a href="{{ post.link|e('esc_url') }}" aria-label="Read More" class="card__link"><span class="card__inner">{{ __('Czytaj wiÄ™cej', 'tokk') }}</span></a>
</section>
